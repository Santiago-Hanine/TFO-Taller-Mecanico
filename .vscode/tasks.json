{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "javac: build src",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d",
        "${workspaceFolder}/out",
        "${workspaceFolder}/src/**/*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$javac"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
